@model List<WebStore.Models.Order>

<link rel="stylesheet" href="~/css/AllOrders.css" />
<h1>All Orders</h1>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Region</th>
                <th>Item</th>
                <th>Amount</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.Date</td>
                    <td>@order.Region.Name</td>
                    <td>@order.Item.Name</td>
                    <td>@order.Amount</td>
                    <td>@order.Users.Login</td>
                    <td>
                        <form method="post" action="/RemoveOrder/@order.Id">
                            <button type="submit" id="Remove">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}